<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gridLayout_datos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:background="@color/colorSombreado"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txt_datosSolicitante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:textStyle="bold"
        android:text="@string/datos_del_solicitante"
        android:textSize="18sp" />

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/txt_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/id" />

        <TextView
            android:id="@+id/txt_id_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="byk98m7" />

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/txt_nombre_solicitante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nombre" />

        <TextView
            android:id="@+id/txt_nombre_solicitante_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dolly JimÃ©nez" />

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/txt_correo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email" />

        <TextView
            android:id="@+id/txt_correo_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dolly.jimenez@gmail.com" />

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/txt_cel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/tel_cel" />

        <TextView
            android:id="@+id/txt_cel_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="312 678 4554" />

    </TableRow>

</TableLayout>